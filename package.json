{
  "name": "dayz-server-manager",
  "version": "1.0.0",
  "description": "DayZ Server Manager with SteamCMD integration, workshop mod management, and clean UI",
  "main": "src/main/main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "build": "electron-builder",
    "build:win": "electron-builder --win",
    "build:mac": "electron-builder --mac",
    "build:linux": "electron-builder --linux"
  },
  "keywords": [
    "dayz",
    "server",
    "manager",
    "steamcmd",
    "workshop"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1"
  },
  "dependencies": {
    "axios": "^1.6.0",
    "cheerio": "^1.0.0-rc.12",
    "fs-extra": "^11.2.0",
    "chokidar": "^3.5.3",
    "read-last-lines": "^1.8.0",
    "highlight.js": "^11.9.0",
    "adm-zip": "^0.5.10",
    "tar": "^6.2.0"
  },
  "build": {
    "appId": "com.dayzservermanager.app",
    "productName": "DayZ Server Manager",
    "directories": {
      "output": "dist"
    },
    "files": [
      "src/**/*",
      "resources/**/*",
      "node_modules/**/*"
    ],
    "win": {
      "target": "nsis",
      "icon": "resources/icons/icon.ico"
    },
    "mac": {
      "target": "dmg",
      "icon": "resources/icons/icon.icns"
    },
    "linux": {
      "target": "AppImage",
      "icon": "resources/icons/icon.png"
    }
  }
}

